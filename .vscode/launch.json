{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Run",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host",
                "127.0.0.1",
                "--port",
                "5000"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}