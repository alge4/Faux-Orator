{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask with Edge",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "serverReadyAction": {
                "action": "debugWithEdge",
                "pattern": "Running on (http?://\\S+|[0-9]+)",
                "uriFormat": "http://localhost:5000"
            }
        }
    ]
}